@model MartialTime.Models.Form.SignInForm;
@{
    ViewData["Title"] = "Connectez-vous";
    Layout = "_LayoutSignIn";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <!--<img src="~/images/logo.svg" alt="logo">-->
                        </div>
                        <h4>Bonjour !</h4>
                        <h6 class="fw-light">Connectez vous.</h6>
                        <form method="POST" class="pt-3" asp-controller="SignIn" asp-action="OpenSession">
                            @if (TempData["connectionStat"] != null && (int) TempData["connectionStat"] == 0)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <strong>Echec de connexion !</strong> Veuillez recommencer...
                                </div>
                            }
                            @if (TempData["permessionDenied"] != null && (int) TempData["permessionDenied"] == 0)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <strong>[403] Action non autorisé!</strong> Veuillez vous connecter...
                                </div>
                            }
                            <div class="form-group">
                                <input asp-for="email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Mot de passe" required>
                            </div>
                            <div class="form-group">
                                <select asp-for="userType" class="form-control form-control-lg" id="exampleInputSelect" required>
                                    <option disabled selected value="">Vous êtes ?</option>
                                    <option value="coach">Coach</option>
                                    <option value="student">Etudiant</option>
                                </select>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Se connecter</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        Se souvenir de moi
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-black">Mot de passe oublié?</a>
                            </div>
                            <div class="text-center mt-4 fw-light">
                                Vous n'avez pas de compte? <a href="#" class="text-primary">Créer un compte</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>